<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/message_listview_item_type_layout"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#F5AC4E"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/message_listview_item_type_text"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="未读消息"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_listview_item_content_layout"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="13"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="9dp" >

        <TextView
            android:id="@+id/message_listview_item_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开学通知家长：我校将于2月16日上午8：30到学校集中，检查暑期作业。2月17日正式上课。希望全体同学准时到校"
            android:textColor="#2B2B2B"
            android:textSize="18sp" 
            android:lineSpacingMultiplier="1.1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/message_listview_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="13:11, 2014,02,09"
                    android:textColor="#2B2B2B"
                    android:textSize="16sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/message_listview_item_flag"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:src="@drawable/flag_normal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>