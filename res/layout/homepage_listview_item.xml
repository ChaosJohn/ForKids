<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="9dp"
    android:paddingBottom="9dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/homepage_listview_item_color"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:background="#2FBAE8"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/homepage_listview_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingLeft="9dp"
            android:paddingTop="4dp"
            android:text="今日学习内容：\n学习讲三只小猪的故事\n与小伙伴们玩了老鹰捉小鸡的游戏"
            android:textColor="#000000"
            android:textSize="20sp"
            android:lineSpacingMultiplier="1.2" />

        <LinearLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/feed_image1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/feed_image2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/feed_image3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <!-- <TextView -->
            <!-- android:id="@+id/homepage_listview_item_title" -->
            <!-- android:layout_width="0dip" -->
            <!-- android:layout_height="match_parent" -->
            <!-- android:layout_marginLeft="4dp" -->
            <!-- android:layout_weight="2" -->
            <!-- android:text="今日学习内容" -->
            <!-- android:textColor="#000000" -->
            <!-- android:textSize="20sp" -->
            <!-- android:textStyle="bold|italic" -->
            <!-- android:visibility="invisible" /> -->

            <TextView
                android:id="@+id/homepage_listview_item_time"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="11:30，2014-02-01"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>